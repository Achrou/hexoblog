
.hexo-douban-tabs {
    margin-bottom: 15px;
    margin-top: 15px;
}

.hexo-douban-tab {
    padding: 5px;
}

.hexo-douban-active {
    background: #657b83;
    color: #fff;
}

.hexo-douban-item {
    padding-bottom: 10px;
    position: relative;
    clear: both;
    min-height: 170px;
    padding: 10px 0;
    border-bottom: 1px #ddd dashed;
}

@media screen and (max-width: 600px) {
    .hexo-douban-item {
        width: 100%;
    }
}

.hexo-douban-picture
    /*position: absolute;
    left: 0;
    top: 10px;*/
    position: relative;
    float:left
    marigin-top:10px
    width: 100px;
    /*height: 149px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;*/

.hexo-douban-tips
    position: absolute
    bottom: 0
    left: 0
    overflow: hidden
    padding: 5px 6px
    width:100%
    /*background-image: linear-gradient(transparent,rgba(0,0,0,.3))
    background-repeat: no-repeat*/
    color: #fff
    text-align: right
    text-overflow: ellipsis
    white-space: nowrap
    font-size: 0.7rem

.hexo-douban-info {
    padding-left: 120px;
}

.hexo-douban-meta {
    font-size: 12px;
    padding-right: 10px;
}

.hexo-douban-eval
    //font-size: 12px
    background: none #f2f4f6
    margin-top: 3px;
    padding: 0px 10px
    -webkit-border-radius: 5px
    .date
        font-size: 12px

.hexo-douban-comment:before
    content: "\f10d    " !important;
    font-size: 1.1rem;
    color: #ccc;
    font-family: FontAwesome;

.hexo-douban-comment:after
    content: '    \f10e' !important;
    font-size: 1.1rem;
    color: #ccc;
    font-family: FontAwesome;

.hexo-douban-player-info
    clear: both

.hexo-douban-pagination {
    margin-top: 15px;
    text-align: center;
    margin-bottom: 10px;
}

.hexo-douban-player-all
    float:right
    font-size:14px

.hexo-douban-button {
    padding: 5px;
}

.hexo-douban-button:hover {
    background: #657b83;
    color: #fff;
}

.hexo-douban-hide {
    display: none;
}

.hexo-douban-show {
    display: block;
}

.hexo-douban-eval
    .rating1-t,
    .rating2-t,
    .rating3-t,
    .rating4-t,
    .rating5-t
        display: inline-block
        zoom: 1
        background: -webkit-image-set(url(https://img3.doubanio.com/f/shire/b8f4c3672ef81106701071831e22422a745d3b74/pics/rating_icons/ic_rating_s.png) 1x, url(https://img3.doubanio.com/f/shire/0147ca9efddcac80050854590d26bee587b008df/pics/rating_icons/ic_rating_s@2x.png) 2x) no-repeat
        width: 55px
        height: 11px
        margin: 0 8px 0 0
        overflow: hidden

    .rating1-t
        background-position: 0 -88px

    .rating2-t
        background-position: 0 -66px

    .rating3-t
        background-position: 0 -44px

    .rating4-t
        background-position: 0 -22px

    .rating5-t
        background-position: 0 0px

