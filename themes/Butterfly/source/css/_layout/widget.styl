.site-author-image {
    display: block;
    margin: 0 auto;
    height: auto;
    max-width: none;
    width: 100%;
    border: none;
    padding: 0;
    border-radius: 10px;
}
.about-photo{
    margin: -50px 0 0;
    width: 90px;
    height: 90px;
    border: 4px solid rgba(0,0,0,.1);
    border-radius: 50%;
    transform: rotate(0);
    transition: all ease 1s;
    -webkit-transition: all ease 1s;
    -moz-transition: all ease 1s;
    -o-transition: all ease 1s;
}
.about-photo:hover{
    -webkit-transform: rotateZ(360deg);
    -moz-transform: rotateZ(360deg);
    -o-transform: rotateZ(360deg);
    -ms-transform: rotateZ(360deg);
    transform: rotateZ(360deg);
}
.site-author-name {
    text-shadow: 1px 1px 0 #ff3f1a, -1px -1px 0 #00a7e0;
    text-align: center;
    position: relative;
    bottom: 37px;
    margin: 0 0 0 -65px;
    font-size: 20px;
    letter-spacing: .5px;
    color: #fff;
    font-weight: 700;
    width: 130px;
    left: 50%;
    z-index:1;
}